<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
  <tabs
      jcr:primaryType="nt:unstructured"
      sling:resourceType="wcm/dialogs/components/tabs">
    <generalTab
        jcr:primaryType="nt:unstructured"
        sling:resourceType="wcm/dialogs/components/tab"
        label="General">
      <header
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/textfield"
          name="header"
          label="Header"/>
      <showButton
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/toggle"
          name="showButton"
          checkedByDefault="true"
          label="Show button"/>
      <buttonLabel
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/textfield"
          name="buttonLabel"
          label="Label on the button">
        <ws:display
            jcr:primaryType="nt:unstructured">
          <condition
              jcr:primaryType="nt:unstructured"
              sourceName="showButton"
              values="true"/>
        </ws:display>
      </buttonLabel>
      <variant
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/include">
        <include
            jcr:primaryType="nt:unstructured"
            sling:resourceSuperType="/apps/bulma/components/common/variant"
            label="Custom label">
          <white
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/select/selectitem"
            label="Active"
            value="is-active"/>
        </include>
      </variant>
    </generalTab>
    <pricingTab
        jcr:primaryType="nt:unstructured"
        sling:resourceType="wcm/dialogs/components/tab"
        label="Pricing details">
      <showPricing
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/toggle"
          name="showPricing"
          checkedByDefault="true"
          label="Show pricing fields"/>
      <container
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/container">
        <price
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/numberfield"
            name="price"
            min="0"
            label="Price of the plan"/>
        <currency
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/include"
            path="/apps/bulma/components/pricingplan/attributes/currency"/>
        <period
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/include"
            path="/apps/bulma/components/pricingplan/attributes/period"/>
        <ws:display
            jcr:primaryType="nt:unstructured">
          <condition
              jcr:primaryType="nt:unstructured"
              sourceName="showPricing"
              values="true"/>
        </ws:display>
      </container>
    </pricingTab>
    <detailsTab
        jcr:primaryType="nt:unstructured"
        sling:resourceType="wcm/dialogs/components/tab"
        label="Plan details">
      <!--TODO Move to multifield when available-->
      <details1
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/textfield"
          name="details/1/description"
          label="Detail"/>
      <details2
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/textfield"
          name="details/2/description"
          label="Detail"/>
      <details3
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/textfield"
          name="details/3/description"
          label="Detail"/>
      <detail4
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/textfield"
          name="details/4/description"
          label="Detail"/>
    </detailsTab>
  </tabs>
</jcr:root>
