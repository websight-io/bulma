<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
    <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tabs">
        <generalTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="General">
            <isNarrowColumn
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/toggle"
                    name="isNarrowColumn"
                    label="Narrow column"
                    description="Enable this, so the column will only take the actual space it needs."
            />
            <widthContainer
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/container">
                <sizeType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/include"
                        path="/apps/bulma/components/columns/attributes/size/type"/>
                <evenNumber
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/container">
                    <size
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/dialogs/components/include"
                            path="/apps/bulma/components/columns/attributes/size/evennumber"/>
                    <ws:display
                            jcr:primaryType="nt:unstructured">
                        <condition
                                jcr:primaryType="nt:unstructured"
                                sourceName="sizeType"
                                values="evenNumber"/>
                    </ws:display>
                </evenNumber>
                <fraction
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/container">
                    <style
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/dialogs/components/include"
                            path="/apps/bulma/components/columns/attributes/size/fraction"/>
                    <ws:display
                            jcr:primaryType="nt:unstructured">
                        <condition
                                jcr:primaryType="nt:unstructured"
                                sourceName="sizeType"
                                values="fraction"/>
                    </ws:display>
                </fraction>
                <offsetType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/include"
                        path="/apps/bulma/components/columns/attributes/offset/type"/>
                <offsetEvenNumber
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/container">
                    <size
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/dialogs/components/include"
                            path="/apps/bulma/components/columns/attributes/offset/evennumber"/>
                    <ws:display
                            jcr:primaryType="nt:unstructured">
                        <condition
                                jcr:primaryType="nt:unstructured"
                                sourceName="offsetType"
                                values="evenNumber"/>
                    </ws:display>
                </offsetEvenNumber>
                <offsetFraction
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/container">
                    <style
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/dialogs/components/include"
                            path="/apps/bulma/components/columns/attributes/offset/fraction"/>
                    <ws:display
                            jcr:primaryType="nt:unstructured">
                        <condition
                                jcr:primaryType="nt:unstructured"
                                sourceName="offsetType"
                                values="fraction"/>
                    </ws:display>
                </offsetFraction>
                <ws:display
                        jcr:primaryType="nt:unstructured">
                    <condition
                            jcr:primaryType="nt:unstructured"
                            sourceName="isNarrowColumn"
                            values="false"/>
                </ws:display>
            </widthContainer>
        </generalTab>
    </tabs>
</jcr:root>
