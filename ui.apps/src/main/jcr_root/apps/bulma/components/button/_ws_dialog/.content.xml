<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
    <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tabs">
        <generalTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="General">
            <label
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="label"
                    label="Label"/>
            <type
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/include"
                    path="/apps/bulma/components/button/attributes/type"/>
            <container
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/container">
                <url
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/pathpicker"
                        rootPath="/content"
                        name="url"
                        label="URL"/>
                <openInNewTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/toggle"
                        name="openInNewTab"
                        label="Open link in a new tab"/>
                <ws:display
                        jcr:primaryType="nt:unstructured">
                    <condition
                            jcr:primaryType="nt:unstructured"
                            sourceName="type"
                            values="a"/>
                </ws:display>
            </container>
            <size
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/include"
                    path="/apps/bulma/components/common/size"/>
            <variant
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/include"
                    path="/apps/bulma/components/button/attributes/variant"/>
        </generalTab>
        <modifiers
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="Modifiers">
            <isLight
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/toggle"
                    name="isLight"
                    checkedByDefault="false"
                    label="Light">
            </isLight>
            <isOutlined
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/toggle"
                    name="isOutlined"
                    checkedByDefault="false"
                    label="Outlined">
            </isOutlined>
            <isRounded
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/toggle"
                    name="isRounded"
                    checkedByDefault="false"
                    label="Rounded">
            </isRounded>
            <isFullWidth
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/toggle"
                    name="isFullWidth"
                    checkedByDefault="false"
                    label="Full width">
            </isFullWidth>
            <isDisabled
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/toggle"
                    name="isDisabled"
                    checkedByDefault="false"
                    label="Disabled">
                <ws:display
                        jcr:primaryType="nt:unstructured">
                    <condition
                            jcr:primaryType="nt:unstructured"
                            sourceName="type"
                            values="button"/>
                </ws:display>
            </isDisabled>
        </modifiers>
    </tabs>
</jcr:root>
