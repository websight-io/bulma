<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
    <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tabs">
        <generalTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="General">
            <header
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="header"
                    label="Card header"
            />
            <title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="title"
                    label="Title"
            />
            <subtitle
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="subtitle"
                    label="Subtitle"
            />
            <content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/richtext"
                    name="content"
                    label="Content"
            />
        </generalTab>
        <thumbnailTab
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tab"
            label="Thumbnail">
            <type
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/include"
                path="/apps/bulma/components/card/common/type"/>
            <thumbnail
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/include"
                    namespace="thumbnail">
                <include
                        jcr:primaryType="nt:unstructured"
                        sling:resourceSuperType="/apps/bulma/components/card/common/image">
                    <style
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="true"
                    />
                </include>
                <ws:display
                    jcr:primaryType="nt:unstructured">
                    <condition
                        jcr:primaryType="nt:unstructured"
                        sourceName="type"
                        values="image"/>
                </ws:display>
            </thumbnail>
            <iconContainer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/container">
                <icon
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/include"
                    path="/apps/bulma/components/common/icon"/>
                <style
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/include"
                    path="/apps/bulma/components/common/textvariant"/>
                <ws:display
                    jcr:primaryType="nt:unstructured">
                    <condition
                        jcr:primaryType="nt:unstructured"
                        sourceName="type"
                        values="icon"/>
                </ws:display>
            </iconContainer>
        </thumbnailTab>
        <imageTab
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tab"
            label="Image">
            <mainImage
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/include"
                    namespace="image">
                <include
                        jcr:primaryType="nt:unstructured"
                        sling:resourceSuperType="/apps/bulma/components/card/common/image"
                        >
                    <fixedStyle
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="true"
                    />
                </include>
            </mainImage>
        </imageTab>
        <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="Footer">
            <urls
            jcr:primaryType="nt:unstructured"
            name="urls"
            label="Footer URLs"
            sling:resourceType="wcm/dialogs/components/multifield">
                <address
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/pathpicker"
                    name="address"
                    label="URL"/>
                <label
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="label"
                    label="Label"/>
            </urls>
        </footer>
    </tabs>
</jcr:root>