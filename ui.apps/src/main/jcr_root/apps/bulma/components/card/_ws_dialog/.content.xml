<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
    <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tabs">
        <generalTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="General">
            <header
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="header"
                    label="Card header"
            />
            <title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="title"
                    label="Title"
            />
            <subtitle
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="subtitle"
                    label="Subtitle"
            />
            <content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/richtext"
                    name="content"
                    label="Content"
            />
            <date
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/datepicker"
                name="date"
                label="Date"
                required="true"
                type="datetime"
                displayDateFormat="YYYY-MM-DD"
                displayTimeFormat="HH:mm"
                minDate="2020-01-02"
                maxDate="2022-12-12"/>
        </generalTab>
        <thumbnail
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/include">
            <include
                    jcr:primaryType="nt:unstructured"
                    sling:resourceSuperType="/apps/bulma/components/card/common/image"
                    label="Thumbnail">
                <assetReference
                        jcr:primaryType="nt:unstructured"
                        name="thumbnail/assetReference"/>
                <src
                        jcr:primaryType="nt:unstructured"
                        name="thumbnail/src"
                />
                <alt
                        jcr:primaryType="nt:unstructured"
                        name="thumbnail/alt"
                />
            </include>
        </thumbnail>
        <mainImage
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/include">
            <include
                    jcr:primaryType="nt:unstructured"
                    sling:resourceSuperType="/apps/bulma/components/card/common/image">
            </include>
        </mainImage>
        <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="Footer">
            <urls
            jcr:primaryType="nt:unstructured"
            name="urls"
            label="Footer URLs"
            sling:resourceType="wcm/dialogs/components/multifield">
                <adress
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/pathpicker"
                    name="address"
                    label="URL"/>
                <label
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="label"
                    label="Label"/>
            </urls>
        </footer>
    </tabs>
</jcr:root>