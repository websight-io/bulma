<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
  <tabs
      jcr:primaryType="nt:unstructured"
      sling:resourceType="wcm/dialogs/components/tabs">
    <generalTab
        jcr:primaryType="nt:unstructured"
        sling:resourceType="wcm/dialogs/components/tab"
        label="General">
      <assetReference
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/assetreference"
          mimeTypes="[image/*]"
          name="assetReference"
          description="Default image source"
          label="Choose image"/>
      <src
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/pathpicker"
          rootPath="/content"
          name="src"
          description="Secondary image source"
          label="Use this if you want a link to image from WEB"/>
      <alt
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/textfield"
          name="alt"
          label="Alt text"/>
    </generalTab>
    <styleTab
        jcr:primaryType="nt:unstructured"
        sling:resourceType="wcm/dialogs/components/tab"
        label="Style of image">
      <type
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/include"
          path="/apps/bulma/components/image/attributes/type"/>
      <ratio
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/container">
        <style
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/include"
            path="/apps/bulma/components/image/attributes/ratio"/>
        <ws:display
            jcr:primaryType="nt:unstructured">
          <condition
              jcr:primaryType="nt:unstructured"
              sourceName="type"
              values="ratio"/>
        </ws:display>
      </ratio>
      <fixed
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/container">
        <style
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/include"
            path="/apps/bulma/components/image/attributes/fixed"/>
        <ws:display
            jcr:primaryType="nt:unstructured">
          <condition
              jcr:primaryType="nt:unstructured"
              sourceName="type"
              values="fixed"/>
        </ws:display>
      </fixed>
      <isRounded
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/toggle"
          name="isRounded"
          checkedByDefault="false"
          label="Rounded"/>
    </styleTab>
  </tabs>
</jcr:root>
