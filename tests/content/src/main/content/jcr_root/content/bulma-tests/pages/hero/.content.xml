<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
  xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:ws="http://ds.pl/websight"
  jcr:primaryType="ws:Page">
  <jcr:content
    jcr:primaryType="ws:PageContent"
    jcr:title="Hero"
    sling:resourceType="bulma/components/page"
    ws:template="/apps/bulma/templates/basicpage">
    <pagecontainer
      jcr:primaryType="nt:unstructured"
      sling:resourceType="bulma/components/pagecontainer">
      <container
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/container">
        <hero
          size="is-medium"
          subTitle="Warning"
          title="Medium"
          variant="is-warning"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="bulma/components/hero"/>
      </container>
      <container_1
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/container">
        <hero
          size="is-large"
          subTitle="Danger"
          title="Large"
          variant="is-danger"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="bulma/components/hero"/>
      </container_1>
      <container_2
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/container">
        <hero
          size="is-halfheight"
          subTitle="Info"
          title="Half-height"
          variant="is-info"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="bulma/components/hero"/>
      </container_2>
      <container_3
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/container">
        <hero
          size="is-small"
          subTitle="Primary"
          title="Small"
          variant="is-primary"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="bulma/components/hero"/>
      </container_3>
      <container_3_1
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/container">
        <hero
          size="is-small"
          subTitle="Success"
          title="Small"
          variant="is-success"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="bulma/components/hero"/>
      </container_3_1>
      <container_3_1_1
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/container">
        <hero
          size="is-small"
          subTitle="Light"
          title="Small"
          variant="is-light"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="bulma/components/hero"/>
      </container_3_1_1>
      <container_3_1_2
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/container">
        <hero
          size="is-small"
          subTitle="Dark"
          title="Small"
          variant="is-dark"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="bulma/components/hero"/>
      </container_3_1_2>
      <hero
        jcr:primaryType="nt:unstructured"
        sling:resourceType="bulma/components/hero"/>
    </pagecontainer>
  </jcr:content>
</jcr:root>
