  <description>Bulma</description>
  <groupId>pl.ds.bulma</groupId>
  <modelVersion>4.0.0</modelVersion>
  <modules>
    <module>all</module>
    <module>core</module>
    <module>ui.frontend</module>
    <module>ui.apps</module>
    <module>tests</module>
  </modules>

  <name>Bulma</name>

  <packaging>pom</packaging>

  <profiles>

    <profile>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <artifactId>sling-maven-plugin</artifactId>
              <executions>
                <execution>
                  <goals>
                    <goal>install</goal>
                  </goals>
                  <id>install-bundle</id>
                </execution>
              </executions>
              <groupId>org.apache.sling</groupId>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
      <id>autoInstallBundle</id>
    </profile>

    <profile>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <artifactId>content-package-maven-plugin</artifactId>
              <executions>
                <execution>
                  <goals>
                    <goal>install</goal>
                  </goals>
                  <id>install-package</id>
                </execution>
              </executions>
              <groupId>com.day.jcr.vault</groupId>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
      <id>autoInstallPackage</id>
    </profile>

    <profile>
      <id>e2e</id>
      <properties>
        <e2e.skip>false</e2e.skip>
      </properties>
    </profile>

  </profiles>

  <properties>
    <bnd.version>5.1.2</bnd.version>
    <checkstyle.severity.level>warning</checkstyle.severity.level>
    <componentGroupName>ds.pl.bulma</componentGroupName>
    <e2e.skip>true</e2e.skip>
    <frontend-maven-plugin.version>1.12.0</frontend-maven-plugin.version>
    <jupiter.version>5.9.0</jupiter.version>
    <mockito.version>4.6.1</mockito.version>
    <mongo.container.image>mongo:4.4.6</mongo.container.image>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <sling.caconfig.bnd.version>1.0.2</sling.caconfig.bnd.version>
    <sling.install.package.host>localhost</sling.install.package.host>
    <sling.install.package.password>wsadmin</sling.install.package.password>
    <sling.install.package.path>/apps/websight-package-manager-service/bin/install
    </sling.install.package.path>
    <sling.install.package.port>8080</sling.install.package.port>
    <sling.install.package.username>wsadmin</sling.install.package.username>

    <!-- admin user default credentials for tests and maven plugins -->
    <sling.models.bnd.version>1.0.0</sling.models.bnd.version>
    <sling.password>wsadmin</sling.password>

    <sling.scriptbundle.version>0.5.0</sling.scriptbundle.version>
    <sling.user>wsadmin</sling.user>

    <websight.admin.password>wsadmin</websight.admin.password>
    <websight.admin.username>wsadmin</websight.admin.username>
  </properties>

  <version>1.0.0-SNAPSHOT</version>

</project>
