        <groupId>org.osgi</groupId>
        <scope>provided</scope>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <artifactId>org.osgi.annotation.bundle</artifactId>
        <groupId>org.osgi</groupId>
        <scope>provided</scope>
        <version>1.0.0</version>
